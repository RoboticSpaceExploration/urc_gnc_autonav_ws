<launch>
    <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager"/>

    <node pkg="nodelet" type="nodelet" name="voxel_grid" args="load pcl/VoxelGrid pcl_manager" output="screen">
        <remap from="~input" to="/zed2/zed_node/point_cloud/cloud_registered"/>
        <remap from="/voxel_grid/output" to="/zed2/zed_node/point_cloud/cloud_registered/downsample"/>
        <param name="leaf_size" type="double" value="0.1"/>
    </node>

    <node pkg="nodelet" type="nodelet" name="obstacles_detection" args="standalone rtabmap_util/obstacles_detection" output="screen">
        <remap from="cloud" to="/zed2/zed_node/point_cloud/cloud_registered/downsample"/>
        <param name="Grid/MaxGroundAngle" type="double" value="10"/>
        <param name="Grid/MinObstacleHeight" type="double" value="0.3"/>
        <param name="Grid/MaxObstacleHeight" type="double" value="2.0"/> 
        <param name="Grid/CellSize" type="double" value="0.05"/> 
        <param name="Grid/MaxGroundHeight" type="double" value="0.1"/> 
    </node>
</launch>

